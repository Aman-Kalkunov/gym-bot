generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model CrossfitTraining {
  id        Int      @id @default(autoincrement())
  date      DateTime
  dayOfWeek Int
  time      String
  capacity  Int
  booked    Int      @default(0)
  users     Booking[]
}

model Booking {
  id          Int      @id @default(autoincrement())
  userId      Int
  userName    String
  userNick    String?
  trainingId  Int
  training    CrossfitTraining  @relation(fields: [trainingId], references: [id])
  createdAt   DateTime  @default(now())
}

