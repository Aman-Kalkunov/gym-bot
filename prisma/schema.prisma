generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum TrainingType {
  CROSSFIT
  BACK
}

model Training {
  id        Int      @id @default(autoincrement())
  type      TrainingType
  date      String
  dayOfWeek Int
  time      String
  capacity  Int
  booked    Int      @default(0)
  users     Booking[]
}

model Booking {
  id          Int      @id @default(autoincrement())
  userId      BigInt   
  userName    String
  userNick    String?
  trainingId  Int
  training    Training  @relation(fields: [trainingId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
}

